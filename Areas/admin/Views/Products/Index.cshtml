@model IEnumerable<laptrinhweb.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Danh sách sản phẩm</h2>

<p>
    @Html.ActionLink("Thêm mới ", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
          Tên sản phẩm 
        </th>
        <th>
            Hình ảnh
        </th>
        <th>
            Đơn giá
        </th>
        <th>
            Danh mục
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductImage)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category.CategoryName)
        </td>
        <td>
            @Html.ActionLink("Cập nhật","Edit", new { id = item.ProductID }, new { @class = "btn btn-primary btn-sm" })
            @Html.ActionLink("Chi tiết","Details", new { id = item.ProductID }, new { @class = "btn btn-primary btn-sm" })
            @Html.ActionLink("Xóa", "Delete", new { id = item.ProductID }, new { @class = "btn btn-primary btn-sm" })
    </tr>
}

</table>
